package cjhs;

import java.awt.Color;
import java.awt.Dimension;
import java.awt.GridLayout;

import javax.swing.BorderFactory;
import javax.swing.BoxLayout;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JTextField;


public class Framen extends JFrame {
	

	public static int GRID_ROWS = 10;
	public static int GRID_COL = 10;
	public static int BOX_SIZE = 50;
	
	public static int DESU_WIDTH = BOX_SIZE*GRID_ROWS;
	public static int DESU_HEIGHT = BOX_SIZE*GRID_COL;
	
	
	
	private static final long serialVersionUID = -3345354391577272355L;
	public Framen() {
		
		JTextField[][] jt = new JTextField[GRID_ROWS][GRID_COL];
		
		JPanel content = new JPanel();
		
		//Game panel and switch panel
		JPanel p = new JPanel();
		JPanel p2 = new JPanel();
		 
		//Adds panels to the content panel
		content.add(p);
		content.add(p2);
		
		
		BoxLayout layout = new BoxLayout(content,BoxLayout.Y_AXIS);
		content.setLayout(layout);
		
		add(content);
		p.setLayout(new GridLayout(GRID_ROWS, GRID_COL));
		
		for(int row = 0; row < GRID_ROWS; row++) {
			for(int col = 0; col < GRID_COL; col++){
				jt[row][col] = new JTextField();
				p.add(jt[row][col]);
				jt[row][col].setBorder(BorderFactory.createMatteBorder(3, 3, 3, 3, Color.PINK));
			}
		}
		
		setPreferredSize(new Dimension(DESU_WIDTH, DESU_HEIGHT));
pack();
		setLocationRelativeTo(null);
		setTitle("sdas");
		setDefaultCloseOperation(3);
	
		setVisible(true);
		
		
	}

}
